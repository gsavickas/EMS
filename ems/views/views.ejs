<!DOCTYPE html>
<html lang="en">
  <%- include ('header') %>

  <body>
    <%- include ('navbar') %>

    <div role="main" class="container" style="width: 50%;">
      <br /><br />

      <h2>Trooper Details</h2>
      <br />
      <div>
        <div class="form-group">
          <label for="fName">First Name:</label>
          <input
            type="text"
            class="form-control"
            id="fName"
            readonly
            value="<%= employee[0].firstName %>"
            name="fName"
          />
          <label for="lName">Last Name:</label>
          <input
            type="text"
            class="form-control"
            id="lName"
            readonly
            value="<%= employee[0].lastName %>"
            name="lName"
          />
        </div>
      </div>

      <br /><br />

      <a href="/">&larr; OK</a>
    </div>

    <%- include ('scripts') %>
  </body>
</html>
