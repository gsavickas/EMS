<div role="main" class="container" style="width: 50%;">
  <br/><br/>
  <% if (fruits.length) { %>
<h2>-- Fruit Listing --</h2><br /> <br />
  <a href="/new">Add New</a>
  <table class="table table-hover">
      <thead class="thead-dark">
        <tr>
            <th>Name</th>
            <th>Functions</th>
        </tr>
      </thead>
      <tbody>
      <% employees.forEach(function (entry) { %>
        <tr>
          <td><%= entry.firstName %> td>
          <td><a href="/view/<%= firstName %>">VIEW</a></td>
        </tr>
        <tr>
          <td><%= entry.lastName %> td>
          <td><a href="/view/<%= lastName %>">VIEW</a></td>
        </tr>
      </tbody>
      <% }) %>
  </table>
  <% } else { %>
    No entries! <a href="/new">Add one!</a>
  <% } %>
  <br/>
</div>
